generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 1. INI YANG BARU KITA TAMBAHKAN (ROLE)
enum Role {
  USER
  ADMIN
}

// 2. MODEL USER (UPDATE DENGAN ROLE)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER) // <--- Kolom Role

  accounts      Account[]
  sessions      Session[]
  orders        Order[]   
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// 3. MODEL ACCOUNT (WAJIB ADA UNTUK NEXTAUTH) - MUNGKIN INI YANG HILANG
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// 4. MODEL SESSION (WAJIB ADA UNTUK NEXTAUTH) - MUNGKIN INI JUGA HILANG
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// GANTI model Car YANG PENDEK DENGAN INI:

model Car {
  id           String   @id @default(cuid())
  name         String
  brand        String
  price        Int
  image        String
  type         String
  passengers   Int
  transmission String
  fuel         String
  
  orders       Order[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id         String   @id @default(cuid())
  
  // Data Tanggal Sewa
  startDate  DateTime
  endDate    DateTime
  
  // Data Pembayaran
  totalPrice Int
  status     String   @default("PENDING") // Bisa diisi: PENDING, SUCCESS, CANCELLED
  
  // Relasi ke User (Penyewa)
  userId     String
  user       User     @relation(fields: [userId], references: [id])

  // Relasi ke Car (Mobil yang disewa)
  carId      String
  car        Car      @relation(fields: [carId], references: [id])

  // Waktu Pembuatan
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}